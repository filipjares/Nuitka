{
    "type": "array",
    "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
            "module-name": {
                "type": "string",
                "pattern": "^[A-Za-z0-9\\.\\_\\-]+$"
            },
            "data-files": {
                "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "dest_path": {
                            "type": "string"
                        },
                        "dirs": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "patterns": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "control_tags": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "empty_dirs": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "empty_dir_structures": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                }
            },
            "dlls": {
                "type": "array",
                "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "from_filenames": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "relative_path": {
                                    "type": "string"
                                },
                                "prefixes": {
                                    "type": "array"
                                }
                            }
                        },
                        "by_code": {
                            "additionalProperties": false,
                            "type": "object",
                            "properties": {
                                "setup_code": {
                                    "type": "string"
                                },
                                "dll_filename_code": {
                                    "type": "string"
                                }
                            }
                        },

                        "dest_path": {
                            "type": "string"
                        }
                    }
                }
            },
            "anti-bloat": {
                "type": "array",
                "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "module_code": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        },
                        "context": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "control_tags": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "replacements": {
                            "type": "object"
                        },
                        "replacements_plain": {
                            "type": "object"
                        },
                        "change_function": {
                            "type": "object"
                        }
                    }
                }
            },
            "implicit-imports": {
                "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "depends": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "standalone_macos_bundle_mode": {
                            "type": "string",
                            "oneOf": [
                                {
                                    "const": "yes"
                                },
                                {
                                    "const": "no"
                                },
                                {
                                    "const": "onefile"
                                }
                            ]
                        },
                        "disable_console": {
                            "type": "string",
                            "oneOf": [
                                {
                                    "const": "yes"
                                },
                                {
                                    "const": "no"
                                },
                                {
                                    "const": "recommend"
                                },
                                {
                                    "const": "recommend_on_macos"
                                }
                            ]
                        }
                    }
                }
            }
        }
    }
}
